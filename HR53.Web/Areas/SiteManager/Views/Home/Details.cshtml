@model UserUpdateViewModel
@using Microsoft.AspNetCore.Identity 

<div class="mt-4 mb-4"></div>

<form class="mt-4 px-4" asp-area="SiteManager" asp-controller="Home" asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <label for="Name" asp-for="FirstName" class="col-sm-2 col-form-label">First Name: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="FirstName">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="LastName">Surname: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LastName">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone Number: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PhoneNumber">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="City">City: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="City">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Phone" class="col-sm-2 col-form-label" asp-for="Adress">Adress: </label>
        <div class="col-sm-10">
            <input asp-for="Adress" class="form-control">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Department" class="col-sm-2 col-form-label">Department: </label>
        <div class="col-sm-10">
            <input asp-for="Department" class="form-control">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"asp-for="Profession">Profession: </label>
        <div class="col-sm-10">
            <input class="form-control"  asp-for="Profession">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Picture">Picture: </label>
        <div class="col-sm-10">
            <input class="form-control" type="file" asp-for="Picture" id="formFile">
            <span class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary float-end">Update</button>
    <a class="float-start mt-2" asp-area="SiteManager" asp-controller="Home" asp-action="Index">Back To List</a>
</form>


