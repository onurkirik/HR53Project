@model CompanyUpdateViewModel
@{
    ViewData["Title"] = "Update";
}


<div class="container-xxl flex-grow-1 container-p-y">

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Company" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="CompanyId" />
                    <div class="card-body">
                        <div>
                            <label asp-for="CompanyName" id="defaultFormcontrolInput" class="form-label">Company Name</label>
                            <input asp-for="CompanyName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter company name" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="Title" id="defaultFormcontrolInput" class="form-label">Company Title</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Plese enter company title" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="MersisNumber" id="defaultFormcontrolInput" class="form-label">Mersis Number</label>
                            <input asp-for="MersisNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter mersis number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="TaxOffice" id="defaultFormcontrolInput" class="form-label">Tax Office</label>
                            <input asp-for="TaxOffice" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter tax office" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="TaxNumber" id="defaultFormcontrolInput" class="form-label">Tax Number</label>
                            <input asp-for="TaxNumber" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter tax number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Logo" class="form-label">Default file input example</label>
                            <input class="form-control" type="file" asp-for="Logo" id="formFile">
                        </div>
                        <div>
                            <label asp-for="Phone" id="defaultFormcontrolInput" class="form-label">Phone</label>
                            <input asp-for="Phone" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter phone number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="Adress" id="defaultFormcontrolInput" class="form-label">Adress</label>
                            <input asp-for="Adress" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter adress" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="Email" id="defaultFormcontrolInput" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter email" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="TotalEmployeeNumber" id="defaultFormcontrolInput" class="form-label">Total Employee Number</label>
                            <input asp-for="TotalEmployeeNumber" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter total employee number" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="FoundationYear" id="defaultFormcontrolInput" class="form-label">Foundation Year</label>
                            <input asp-for="FoundationYear" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please enter foundation year" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="ContractStartDate" id="defaultFormcontrolInput" class="form-label">Contract Start Date</label>
                            <input asp-for="ContractStartDate" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please select contract start date" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div>
                            <label asp-for="ContractFinishDate" id="defaultFormcontrolInput" class="form-label">Contract Finish Date</label>
                            <input asp-for="ContractFinishDate" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Please select contract finish date" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label asp-for="IsActive" class="form-check-label" for="flexCheckChecked">
                                Is Active?
                            </label>
                        </div>
                        <div class="form-group float-end">
                            <button type="submit" class="btn btn-primary btn-block">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>