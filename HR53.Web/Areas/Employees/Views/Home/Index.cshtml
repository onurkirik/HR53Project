@model AppUser
@{
    ViewData["Title"] = "Index";
}


<div class="card mb-3 mx-4 mt-4" style="max-width: 1050px; height:250px;">
    <div class="row g-0">
        <div class="col-md-4 mt-2">
            <img src="/images/@Model.Picture" style="height:200px; width:200px; border-radius:50%;" class="img-fluid mx-4 mt-4" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Profession</h5>
                <p class="card-text">Name: @Model.Firstname</p>
                <p class="card-text">Surname: @Model.LastName</p>
                <p class="card-text">City: @Model.City</p>
                <p class="card-text">Adress: @Model.Adress</p>
            </div>
        </div>
    </div>
</div>